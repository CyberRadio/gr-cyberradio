<?xml version="1.0"?>
<block>
  <name>[CyberRadio] Convert dBfs to dBm</name>
  <key>CyberRadio_convert_dbfs_dbm</key>
  <category>[CyberRadio]/DSP</category>
  <import>import CyberRadio</import>
  <make>CyberRadio.convert_dbfs_dbm($vec_len, $user_atten, $fac_cal)</make>
  <param>
    <name>Vector Length</name>
    <key>vec_len</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>User Atten</name>
    <key>user_atten</key>
    <value>0</value>
    <type>float</type>
  </param>
  <param>
    <name>Factory Cal</name>
    <key>fac_cal</key>
    <value>28</value>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
    <vlen>$vec_len</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$vec_len</vlen>
  </source>
</block>
