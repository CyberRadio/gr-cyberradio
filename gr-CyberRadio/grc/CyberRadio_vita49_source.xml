<block>
  <name>[CyberRadio] VITA49 Source</name>
  <key>CyberRadio_vita49_source</key>
  <category>[CyberRadio]/Vita and UDP Sources</category>
  <flags>throttle</flags>
  <import>import CyberRadio</import>
  <make>CyberRadio.vita_udp_rx(
      $src_ip, 
      $port, 
      $(radioObj).getVitaHeaderSize(), 
      $(radioObj).getVitaPayloadSize()//4, 
      $(radioObj).getVitaHeaderSize()+$(radioObj).getVitaPayloadSize()+$(radioObj).getVitaTailSize(), 
      $(radioObj).isByteswapped(), 
      $(radioObj).isIqSwapped(), 
      $tag_packets, 
      $vector_output, 
      True, 
      $narrowband, 
      $debug, 
       )</make>
  <param>
    <name>Radio Object</name>
    <key>radioObj</key>
    <type>raw</type>
  </param>
  <param>
    <name>Src_ip</name>
    <key>src_ip</key>
    <value>0.0.0.0</value>
    <type>string</type>
  </param>
  <param>
    <name>Port</name>
    <key>port</key>
    <value>19091</value>
    <type>int</type>
  </param>
  <param>
    <name>Tag_packets</name>
    <key>tag_packets</key>
    <value>False</value>
    <type>bool</type>
    <hide>part</hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Vector Output?</name>
    <key>vector_output</key>
    <value>False</value>
    <type>bool</type>
    <hide>full</hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Narrowband?</name>
    <key>narrowband</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>
  <sink>
    <name>control</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
<!--
    <vlen>{False:1, True:$samples_per_packet}[$vector_output]</vlen>
-->
    <vlen>{False:1, True:$(radioObj).getVitaPayloadSize()//4}[$vector_output]</vlen>
  </source>
  <source>
    <name>status</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
